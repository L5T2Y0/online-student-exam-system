# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=online_exam
DB_USER=root
DB_PASSWORD=your_password_here

# JWT 密钥（必须设置，至少32位随机字符串）
# 生成方法：node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-very-long-and-random-secret-key-at-least-32-characters-change-this

# 服务器端口
PORT=5000

# Node 环境
NODE_ENV=development

# CORS 允许的来源（多个用逗号分隔）
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 前端 API 地址（可选，用于前端配置）
REACT_APP_API_URL=http://localhost:5000
